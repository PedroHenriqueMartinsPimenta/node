<%- include('../contents/header')%>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2>Editar categoria</h2>
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/categorias/update" method="post">
                            <input type="hidden" name="id" value="<%= categoria._id%>">
                            <label for="nome">Nome</label>
                            <input type="text" name="nome" id="nome" placeholder="Nome" class="form-control"  value="<%= categoria.nome%>">

                            <label for="slug">Slug</label>
                            <input type="text" name="slug" id="slug" placeholder="Slug" class="form-control" value="<%= categoria.slug%>">

                            <button type="submit" class="btn btn-outline-danger mt-4">Atualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../contents/footer')%>